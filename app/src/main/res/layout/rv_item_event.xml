<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_bottom"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/event_card_radius"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgRvItemEvent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_135sdp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:transitionName="@string/shared_event_details_image"
            app:sriv_border_width="0dip"
            app:sriv_left_top_corner_radius="@dimen/event_card_radius"
            app:sriv_oval="false"
            app:sriv_right_top_corner_radius="@dimen/event_card_radius" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_135sdp"
            android:background="@drawable/rv_item_event_card_image_background"
            android:scaleType="centerCrop"
            android:src="#000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRvItemEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#30FFFFFF"
            android:gravity="right"
            android:lines="1"
            android:paddingBottom="@dimen/_9sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingTop="@dimen/_9sdp"
            android:text="dsfsdfdfdf"
            android:textColor="#000"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            android:transitionName="@string/shared_event_details_title" />
    </LinearLayout>


</android.support.v7.widget.CardView>