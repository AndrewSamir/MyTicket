<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samir.andrew.myticket.views.activity.Stage"
    tools:showIn="@layout/activity_stage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stage_background"
            android:gravity="center"
            android:padding="@dimen/_25sdp"
            android:text="@string/the_stage"
            android:textColor="#000"
            android:textSize="@dimen/largeTextSize"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvClientStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_11sdp" />

        <Button
            android:id="@+id/btnReserveNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="@string/reserve_now"
            android:textColor="@color/colorWhite"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
